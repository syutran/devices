<%= simple_form_for @device, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" style="margin-top:20px;" >
    <div class="row">
      <div class="col-3 text-right">名称</div>
      <div class="col-9">
        <%= f.input :title, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">类型</div>
      <div class="col-9">
        <%= f.input :dev_class, collection: get_categories_collection, selected:@device.dev_class, label: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">厂商品牌</div>
      <div class="col-9">
        <%= f.input :manufacturer, label: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">产品型号</div>
      <div class="col-9">
        <%= f.input :dev_model, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">序列号</div>
      <div class="col-9">
        <%= f.input :serial_number,label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">详细配置</div>
      <div class="col-9">
        <%= f.input :parameter, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">购置日期</div>
      <div class="col-9">
        <%= f.input :purchased, as: :date, html5: true, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">使用日期</div>
      <div class="col-9">
        <%= f.input :used, as: :date, html5: true, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">使用部门</div>
      <div class="col-9">
        <%= f.input :branch_id, collection: get_grade_branches, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">使用人</div>
      <div class="col-9">
        <%= f.input :user, label: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3 text-right">备注</div>
      <div class="col-9">
        <%= f.input :description, label:false %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
      </div>
      <div class="col-9 text-right">
        <div class="btn-group">
          <%= f.button :submit, "确定提交", class: "btn btn-outline-info" %>
          <%= link_to '返回', :back, class: "btn btn-outline-info" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
